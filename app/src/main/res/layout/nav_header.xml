<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="?attr/colorPrimaryDark"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom"
    android:clickable="true"
    android:weightSum="1"
    android:columnCount="2"
    android:rowCount="5">

    <ImageView
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="180dp"
        android:layout_columnSpan="2"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:background="@drawable/logo"
        android:layout_weight="0.5"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textSize="28dp"
        android:id="@+id/textView"
        android:layout_row="1"
        android:layout_column="0" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_rowSpan="3"
        android:gravity="center"
        android:id="@+id/profile"
        android:layout_marginLeft="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"

        android:textSize="20dp"
        android:text="Nickname"
        android:id="@+id/drawer_nick"
        android:textColor="@color/wallcolor"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:text="message"
        android:id="@+id/drawer_message"
        android:textSize="16dp"
        android:textColor="#E2E5EE"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginLeft="20dp" />





</GridLayout>


    <!--android:layout_column="2"  → 열 좌표-->

    <!--android:layout_row="2"  → 행 좌표-->

    <!--android:layout_cloumnSpan="2"  → ChildView가 차지할 열 수-->

    <!--android:layout_rowSpan="2"  → ChildView가 차지할 행 수-->

    <!--android:gravity="left|baseline"  → ChildView의 정렬 방식-->
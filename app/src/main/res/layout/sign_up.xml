<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <ImageView

            android:layout_width="300dp"
            android:layout_height="82dp"
            android:id="@+id/imageView2"
            android:background="@drawable/logo"
            android:gravity ="center"/>

        <LinearLayout
            android:paddingTop="50dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content">



            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="E-mail Adress"
                android:text="E-mail@mail.com"
                android:id="@+id/emailEdt"
                android:textCursorDrawable="@drawable/text_cursor_cyan"
                android:textSize="15sp"
                app:met_baseColor="?colorAccent"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="30"
                app:met_primaryColor="#9D646E"
                app:met_singleLineEllipsis="true"/>


        </LinearLayout>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            android:text="at least 8 letters"
            android:id="@+id/pwdEdt"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            android:textSize="15sp"
            app:met_baseColor="?colorAccent"
            app:met_floatingLabel="highlight"
            app:met_minCharacters="8"
            app:met_primaryColor="#9D646E"
            app:met_singleLineEllipsis="true" />


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="NickName"
                android:text="    :D"
                android:id="@+id/nickEdt"
                android:layout_weight="1"
                android:textCursorDrawable="@drawable/text_cursor_cyan"
                android:textSize="15sp"
                app:met_baseColor="?colorAccent"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="10"
                app:met_primaryColor="#9D646E"
                app:met_singleLineEllipsis="true" />

        </LinearLayout>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="PHONE NUMBER"
            android:text="EXACT 11 letters"
            android:id="@+id/phoneEdt"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            android:textSize="15sp"
            app:met_baseColor="?colorAccent"
            app:met_floatingLabel="highlight"
            app:met_minCharacters="8"
            app:met_primaryColor="#9D646E"
            app:met_singleLineEllipsis="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNIVERSITY"
            android:textSize="20dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_margin="10dp"
                android:background="@drawable/caulogo2"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView11" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_margin="10dp"
                android:background="@drawable/caulogo2"
                android:id="@+id/imageView12" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_margin="10dp"
                android:background="@drawable/caulogo2"
                android:id="@+id/imageView13" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_margin="10dp"
                android:background="@drawable/caulogo2"
                android:id="@+id/imageView14" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAJOR"
            android:textSize="20dp"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MAJOR"
            android:text="    :D"
            android:id="@+id/majorEdt"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            android:textSize="15sp"
            app:met_baseColor="?colorAccent"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="10"
            app:met_primaryColor="#9D646E"
            app:met_singleLineEllipsis="true" />



        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="학번"
            android:text="    EXACT 2 DIGITS :D"
            android:id="@+id/numberEdt"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            android:textSize="15sp"
            app:met_baseColor="?colorAccent"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="2"
            app:met_primaryColor="#9D646E"
            app:met_singleLineEllipsis="true" />


        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text ="   OK   "
                android:textColor="#ffffff"
                android:id="@+id/signupBtn"
                android:background="@drawable/rounded_corner1"
                android:clickable="true"/>
        </LinearLayout>

    </LinearLayout>



</ScrollView>
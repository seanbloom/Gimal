<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="12dp"
            android:textColor="@color/wallcolor"
            android:textSize="25dp"
            android:gravity="right"
            android:text="과목 정보"
            android:id="@+id/textView8" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageButton2"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit"
            android:clickable="true" />


    </LinearLayout>


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom"
    android:clickable="true"
    android:weightSum="1"
    android:columnCount="3"
    android:rowCount="5">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_column="0"
            android:layout_row="0"
            android:textColor="@color/colorAccent"
            android:text="과목명 :" />
        <TextView
            android:layout_width="wrap_content"

            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:textColor="@color/colorAccent"
            android:text="교수명 :" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:textColor="@color/colorAccent"
            android:text="과제명  :" />

        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:textColor="@color/colorAccent"
            android:text="New Text"
            android:id="@+id/spe_sub" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_column="1"
            android:layout_row="1"
            android:textColor="@color/colorAccent"
            android:text="New Text"
            android:id="@+id/spe_prof" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginTop="4dp"
            android:layout_row="2"
            android:textColor="@color/colorAccent"
            android:text="New Text"
            android:id="@+id/spe_assign" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="70dp"
            android:layout_rowSpan="4"
            android:id="@+id/spe_icon" />

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="20dp"
            android:textColor="@color/wallcolor"
            android:textSize="25dp"
            android:gravity="center"
            android:text="작성자 정보" />


    </LinearLayout>


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical"
        android:gravity="bottom"
        android:clickable="true"
        android:weightSum="1"
        android:columnCount="4"
        android:rowCount="5">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_column="1"
            android:textColor="@color/colorAccent"
            android:layout_row="0"
            android:text="학번 :" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:textColor="@color/colorAccent"
            android:layout_row="1"
            android:text="학교  :" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:textColor="@color/colorAccent"
            android:layout_row="2"
            android:text="학과  :" />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:background="@drawable/rounded_corner"
            android:textColor="#FFFFFF"
            android:layout_row="0"
            android:text="14"
            android:id="@+id/spe_num" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginTop="4dp"
            android:textColor="@color/colorAccent"
            android:layout_row="1"
            android:text="CAU" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_column="2"
            android:textColor="@color/colorAccent"
            android:layout_row="2"
            android:text="COMPUTER" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="5dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_rowSpan="4"
            android:id="@+id/spe_profile" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_nick"
            android:layout_column="3"
            android:layout_row="4"
            android:id="@+id/spe_nick"
            android:text="NickName" />
        <ImageView
            android:layout_width="108dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="4"
            android:background="@drawable/caulogo2" />

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_gravity="center_horizontal">
               <Button
            android:id="@+id/spe_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
                   android:background="@drawable/rounded_corner1"
                   android:layout_marginLeft="20dp"
                   android:textSize="15sp"
            android:text="뒤로가기"/>

        <Button
            android:id="@+id/spe_okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:background="@drawable/rounded_corner1"
            android:layout_marginLeft="70dp"
            android:text="도와주기"/>


    </LinearLayout>







</LinearLayout>
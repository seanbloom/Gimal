<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hellper"
    android:weightSum="1">


    <LinearLayout
        android:alpha="0.8"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="0.09">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_marginTop="300dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-MAIL    "
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:id="@+id/textView5" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/logEmailEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:hint="     E-mail adress"
                android:textColor="#ffffff"
                app:met_baseColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PASSWORD"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="30dp"
                            android:id="@+id/textView" />

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/logPwEdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:hint="     PASSWORD"
                            android:textColor="?colorPrimary"
                            app:met_baseColor="?colorPrimary"/>

        </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="50dp">




                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"

                            android:background="@drawable/rounded_corner1"
                            android:textColor="#ffffff"
                            android:text="           Sign Up           "
                            android:id="@+id/logSignBtn" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="1"
                            android:id="@+id/textView6" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"

                            android:layout_marginLeft="30dp"
                            android:background="@drawable/rounded_corner1"
                            android:textColor="#ffffff"
                            android:text="            Log In           "
                            android:id="@+id/logLogBtn" />


                    </LinearLayout>



    </LinearLayout>


</LinearLayout>